.side-bar
  %ul.side-bar__header
    %li.side-bar__header_user
      = current_user.name
    %li.side-bar__header_icon
      = link_to edit_user_path(current_user) do
        = fa_icon("cog")
      = link_to new_group_path do
        = fa_icon("pencil-square-o")
  %ul.side-bar__tittle
    - current_user.groups.each do |group|
      = link_to(group_messages_path(group)) do
        %li.side-bar__tittle_group
          = group.name
        %li.side-bar__tittle_anser
          = group.show_last_message
